{
    "manifest_version": 2,

    "name": "Django Auto-refresh",
    "description": "A chrome extension to auto-refresh a webpage served by a Django development server. Use it with the companion django app - autorefresh.",
    "version": "1.0",

    "background": { "scripts": ["background.js"] },

    "icons": { "16": "icon_16.png",
               "48": "icon_48.png" },
    "browser_action": {
        "default_icon": "icon_passive.png",
        "default_title": "Django Autorefresh"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "activeTab",
        "http://localhost/",
        "https://ajax.googleapis.com/"
    ]
}

